<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="itemMapper">
    <resultMap id="item" type="com.green.Shop.item.vo.ItemVO">
        <id column="ITEM_CODE" property="itemCode"/>
        <result column="ITEM_NAME" property="itemName"/>
        <result column="ITEM_PRICE" property="itemPrice"/>
        <result column="ITEM_INTRO" property="itemIntro"/>
        <result column="ITEM_STOCK" property="itemStock"/>
        <result column="ITEM_STATUS" property="itemStatus"/>
        <result column="CATE_CODE" property="cateCode"/>
        <collection property="imgList" resultMap="img"/>
    </resultMap>

    <resultMap id="img" type="com.green.Shop.item.vo.ImgVO">
        <id column="IMG_CODE" property="imgCode"/>
        <result column="ORIGIN_FILE_NAME" property="originFileName"/>
        <result column="ATTACHED_FILE_NAME" property="attachedFileName"/>
        <result column="IS_MAIN" property="isMain"/>
        <result column="ITEM_CODE" property="itemCode"/>
    </resultMap>

    <resultMap id="cart" type="com.green.Shop.item.vo.CartVO">
        <id column="CART_CODE" property="cartCode"/>
        <result column="ITEM_CODE" property="itemCode"/>
        <result column="CART_CNT" property="cartCnt"/>
        <result column="MEM_ID" property="memID"/>
        <result column="CART_DATE" property="cartDate"/>
        <collection property="itemList" resultMap="item"/>
        <collection property="imgList" resultMap="img"/>
    </resultMap>



    <!--상품 목록 조회-->
    <!--조회 시 조인, 서브쿼리가 사용되면 조회한 데이터를 자바로 가져오기 위해-->
    <!--정의한 resultMap 에 association 혹은 collection 을 추가해야 함-->
    <!--둘 중의 무엇을 쓸지는 테이블간의 관계가 1:1 관계인지 1:n 관계인지에 따라 결정-->
    <!--테이블의 관계라는 건 정답이 없다. 어떤 테이블을 기준으로 삼는지에 따라 달라짐.-->

    <!--상품 테이블을 기준으로 이미지 테이블과 1:n 관계이다.-->
    <!--이렇게 결정한 테이블의 간의 관계를 vo에 먼저 적용시켜준다.-->
    <!--이 관계를 resultMap 에도 맺어줘야 한다.-->
    <select id="selectItem" resultMap="item">
        SELECT ITEM.ITEM_CODE
            , ITEM_NAME
            , ITEM_PRICE
            , ATTACHED_FILE_NAME
        FROM SHOP_ITEM ITEM, ITEM_IMG IMG
        WHERE ITEM.ITEM_CODE = IMG.ITEM_CODE
        AND IS_MAIN = 'Y'
        ORDER BY ITEM_CODE DESC;
    </select>

    <select id="itemDetail" resultMap="item">
        SELECT ITEM.ITEM_CODE
            , ITEM_NAME
            , ITEM_PRICE
            , ITEM_INTRO
            , ATTACHED_FILE_NAME
        FROM SHOP_ITEM ITEM, ITEM_IMG IMG
        WHERE ITEM.ITEM_CODE = IMG.ITEM_CODE
        AND ITEM.ITEM_CODE = #{itemCode};
    </select>

    <insert id="insertCart">
        INSERT INTO SHOP_CART(
            ITEM_CODE
            , CART_CNT
            , MEM_ID
        )VALUES(
            #{itemCode}
            , #{cartCnt}
            , #{memID}
        );
    </insert>

    <select id="selectCart" resultMap="cart">
        SELECT CART_CODE
         , CART.ITEM_CODE
         , CART_CNT
         , MEM_ID
         , CART_DATE
         , ATTACHED_FILE_NAME
         , ITEM_NAME
         , ITEM_PRICE
        FROM SHOP_CART CART, SHOP_ITEM ITEM, ITEM_IMG IMG
        WHERE IS_MAIN='Y'
        AND CART.ITEM_CODE=ITEM.ITEM_CODE
        AND CART.ITEM_CODE=IMG.ITEM_CODE
        AND MEM_ID= #{memID};
    </select>


</mapper>































